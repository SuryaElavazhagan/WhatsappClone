<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/tyrion"
        android:id="@+id/mContactDp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mContactDp"
        android:layout_toRightOf="@+id/mContactDp"
        android:padding="5dp"
        android:id="@+id/mStatusContactName"
        android:text="Tyrion Lannister"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mContactDp"
        android:layout_toEndOf="@+id/mContactDp"
        android:layout_below="@+id/mStatusContactName"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/mStatusTime"
        android:text="Today, 2:49 PM"
        android:maxLines="1"
        android:maxLength="40"
        android:textSize="12sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/mContactDp"
        android:layout_toEndOf="@+id/mContactDp"
        android:layout_toRightOf="@+id/mContactDp"
        android:background="@color/colorSeparator"/>
</RelativeLayout>