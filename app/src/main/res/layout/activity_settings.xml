<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:padding="16dp"
        android:layout_marginBottom="10dp"
        tools:ignore="UselessParent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/danerys"
            android:layout_centerVertical="true"
            android:id="@+id/SettingsDp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/SettingsDp"
            android:layout_toEndOf="@+id/SettingsDp"
            android:padding="10dp"
            android:id="@+id/myName"
            android:text="Daenerys Targaryen"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myName"
            android:layout_toEndOf="@+id/SettingsDp"
            android:layout_toRightOf="@+id/SettingsDp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:text="Mother of Dragons"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main"
        android:background="@color/colorSeparator"
        android:id="@+id/separator"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:id="@+id/account"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account"
            android:id="@+id/account_ic"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/account_ic"
            android:layout_toEndOf="@+id/account_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/account"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/account"
        android:background="@color/colorSeparator"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:id="@+id/chats"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chat"
            android:id="@+id/chats_ic"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chats_ic"
            android:layout_toEndOf="@+id/chats_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/chats"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/chats"
        android:background="@color/colorSeparator"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chats"
        android:id="@+id/notifications"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_notifications"
            android:id="@+id/notifications_ic"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notifications_ic"
            android:layout_toEndOf="@+id/notifications_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/notifications"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/notifications"
        android:background="@color/colorSeparator"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications"
        android:id="@+id/data_and_storage"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_data"
            android:id="@+id/data_ic"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/data_ic"
            android:layout_toEndOf="@+id/data_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/data_and_storage_usage"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/data_and_storage"
        android:background="@color/colorSeparator"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_and_storage"
        android:id="@+id/invite"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_invite"
            android:id="@+id/invite_ic"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/invite_ic"
            android:layout_toEndOf="@+id/invite_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/invite_a_friend"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/invite"
        android:background="@color/colorSeparator"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite"
        android:id="@+id/help"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_help"
            android:id="@+id/help_ic"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/help_ic"
            android:layout_toEndOf="@+id/help_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="Help"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/help"
        android:background="@color/colorSeparator"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />
</RelativeLayout>