<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".settings.account.twostepverification.TwoStepVerificationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:id="@+id/verified_circle"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_two_step_verification"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verified_circle"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:id="@+id/two_step_verification_guide"
        android:textAlignment="center"
        android:text="@string/two_step_verification_guide"
        android:textColor="@android:color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparator"
        android:layout_below="@id/two_step_verification_guide"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_step_verification_guide"
        android:id="@+id/disable"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_disable"
            android:id="@+id/disable_ic"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/disable_ic"
            android:layout_toEndOf="@+id/disable_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/disable"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disable"
        android:id="@+id/change_pin"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_change_pin"
            android:id="@+id/change_pin_ic"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/change_pin_ic"
            android:layout_toEndOf="@+id/change_pin_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/change_pin"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_pin"
        android:id="@+id/change_email"
        android:padding="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_email"
            android:id="@+id/change_email_ic"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/change_email_ic"
            android:layout_toEndOf="@+id/change_email_ic"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:text="@string/change_email_address"
            android:textSize="15sp"/>
    </RelativeLayout>
</RelativeLayout>